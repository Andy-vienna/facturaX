<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="log" fileName="logs/facturaX.log" immediateFlush="false"
			append="true">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
			<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="log" />
		</Root>
	</Loggers>
</Configuration>
